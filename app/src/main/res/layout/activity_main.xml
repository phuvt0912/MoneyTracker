<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="@color/green">

    <!-- Bố cục ngang để chứa nút và ngày tháng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- ImageButton bên trái -->
        <ImageButton
            android:id="@+id/DatePicker"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Ngày hôm trước"
            android:src="@drawable/ic_calendar"
            android:scaleType="fitXY"/>

        <!-- Phần ngày tháng ở giữa -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/day_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thứ hai"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07/12/2025"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Icon nút góc phải (mới thêm) -->
        <ImageButton
            android:id="@+id/btn_guide"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu"
            android:src="@drawable/questionmark"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <TextView
        android:id="@+id/TotalTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/textview_rounded"
        android:gravity="center"
        android:padding="24dp"
        android:text="1.000.000 đ"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactions_recyclerview"
        android:background="@color/DarkGreen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        tools:listitem="@layout/transaction_item" />

</LinearLayout>
